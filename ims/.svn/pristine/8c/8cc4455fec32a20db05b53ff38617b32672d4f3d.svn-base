package com.eme.ims.client.test;import org.slf4j.Logger;import org.slf4j.LoggerFactory;import com.eme.ims.client.ClientHandler;import com.eme.ims.client.MessageClient;import com.eme.ims.utils.PropertyConfig;public class PerfTestRunnable implements Runnable {		private PropertyConfig config;	private Logger logger = LoggerFactory.getLogger(PerfTestRunnable.class);		MessageClient client = new MessageClient();	ClientHandler handler = new ClientHandler();		public PerfTestRunnable(PropertyConfig config) {		this.config = config;	}	@Override	public void run() {				PerfClientTest.increaseTotalConnection();				client.setHandler(handler);		client.setHost(config.getString("server.host"));		client.setPort(config.getInteger("server.port"));				if (client.connect(config)) {			PerfClientTest.increaseSuccessfulConnection();		} else {			PerfClientTest.increaseFailedConnection();			logger.error("failed to connect to server.");		}			}}